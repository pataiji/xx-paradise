{
  "name": "xxParadise",
  "version": "0.1.2",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "config.js"
    ]
  },
  "content_scripts": [{
    "run_at": "document_start",
    "matches": ["<all_urls>"],
    "js": [
      "shortcut.js",
      "config.js",
      "content.js"
    ]
  }],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "128": "xx-paradise128.png"
  }
}
